{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "*": ["*", "*.js"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}